# Discord Bot Configuration
# Get your token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Guild ID for testing (optional - for faster command sync during development)
# Leave empty for global command sync (takes ~1 hour to update)
GUILD_ID=

# Bot Settings
BOT_PREFIX=!
DEBUG_MODE=False

# Database
DB_PATH=./data/bot.db

# Optional: Owner ID for auto-restart notifications
# Leave empty if you don't want notifications
OWNER_ID=
